# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Learn more: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Terraform files
[*.tf]
indent_style = space
indent_size = 2

# Terraform variable files
[*.tfvars]
indent_style = space
indent_size = 2

# HCL files
[*.hcl]
indent_style = space
indent_size = 2

# YAML files (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 4
end_of_line = crlf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
