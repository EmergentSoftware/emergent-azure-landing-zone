# Example configuration for portal workload using AVM
subscription_id = "00000000-0000-0000-0000-000000000000" # Replace with acme-portal-dev or acme-portal-prod subscription ID
workload_name   = "portal"
environment     = "dev"
location        = "eastus"

# App Service configuration
app_service_os_type = "Linux"
app_service_sku_name = "B1"  # Basic tier for dev/test

# Security and identity
enable_managed_identity = true

# CORS configuration (if needed)
enable_cors          = false
cors_allowed_origins = []

# Health check
health_check_path = "/health"

# Application settings
app_settings = {
  "NODE_ENV"           = "production"
  "WEBSITE_NODE_DEFAULT_VERSION" = "~20"
}

# Monitoring
enable_application_insights = true
log_analytics_workspace_id  = ""  # Provide workspace ID if available

# Tags
tags = {
  Project     = "ALZ Demo"
  CostCenter  = "Engineering"
  Owner       = "Platform Team"
  DeployedBy  = "AVM"
}
